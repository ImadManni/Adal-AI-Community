# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/adal-ai-community
# OR for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/adal-ai-community

# Optional: Specify database name (defaults to 'adal-ai-community')
MONGODB_DB=adal-ai-community

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Google OAuth (for Google Sign-in)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (for GitHub Sign-in)
GITHUB_ID=your-github-client-id
GITHUB_SECRET=your-github-client-secret

# Anthropic API (for AI Assistant)
ANTHROPIC_API_KEY=your-anthropic-api-key